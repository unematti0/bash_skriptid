#!/bin/bash
read -p "sisesta faili asukoht mida soovid kontrollida: " fail
read -p "sisesta soovitud õigused: " oigused

if [ ! -f $fail ]; then
  echo "File not found!"
elif [ "$(stat -c %a "$fail")" = "$oigused" ]; then
  echo "File found!"
  echo "failil on õigused $oigused"
else
  echo "File found!"
  echo "failil on hoopis õigused:"
  stat -c %a "$fail"
fi

