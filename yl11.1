#!/bin/bash
#k체sib millist teenust kontrollida ja lisab selle tenus muutujasse
read -p "millist teenust kontrollida: " teenus

#kui k채sk systemctl is-active {teenus} annab outbuti "active" 체tle et teenus on aktiivne ja kui nii ei ole 체tleb et teenus ei ole aktiivne
if [ "$(systemctl is-active "$teenus")" = "active" ]; then
  echo "$teenus on aktiivne"
else
  echo "$teenus ei ole aktiivne"
fi
